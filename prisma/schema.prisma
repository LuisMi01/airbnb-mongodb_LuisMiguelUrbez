generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  email     String?  @unique
  name      String?
  emailVerified DateTime?
  image     String?
  hashedPassword String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  favouritesIds String[] @db.ObjectId

  accounts Account[]
  listings listingsAndReviews[]
}

model Account {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  userId    String  @db.ObjectId
  provider  String
  type     String
  providerAccountId String
  refresh_token String? @db.String
  access_token String? @db.String
  expires_in Int?
  token_type String?
  scope String?
  id_token String? @db.String
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model listingsAndReviews {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  userId    String  @db.ObjectId

  price     Int
  name      String
  description   String
  property_type String
  last_scraped DateTime
  bedrooms Int
  bathrooms Int
  accomodates Int

  images         Images     @relation(fields: [imagesId], references: [id])
  address       Address    @relation(fields: [addressId], references: [id])

  @@map("listingsAndReviews")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Images {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  ListingId String  @db.ObjectId

  thumbnailUrl   String?
  mediumUrl      String?
  pictureUrl     String?
  xlPictureUrl   String?

  @@map("listingsAndReview")

  listing listingsAndReviews @relation(fields: [ListingId], references: [id], onDelete: Cascade)
}

model Address{
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  ListingId String  @db.ObjectId

  street String?
  suburb String?
  government_area String?
  market String?
  country String?
  country_code String?

  @@map("listingsAndReview")
}